---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Organization Sign Up - DoMore Mongolia">
  <main class="container mx-auto px-4">
    <section class="py-8 bg-gray-50 rounded-2xl shadow-inner mt-12 mx-4 md:mx-auto">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-8 md:p-12">
          <h2 class="text-3xl font-bold mb-8 text-gray-900 text-center">
            Бүртгүүлэх
          </h2>
          <form class="space-y-6">
            <div>
              <label for="organizationName" class="block text-gray-700 text-sm font-semibold mb-2">Байгууллагын / Үйл ажиллагааны нэр</label>
              <input
                type="text"
                id="organizationName"
                name="organizationName"
                placeholder="Жишээ нь: DoMore Mongolia"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="contactFullName" class="block text-gray-700 text-sm font-semibold mb-2">Холбоо барих ажилчны нэр</label>
              <input
                type="text"
                id="contactFullName"
                name="contactFullName"
                placeholder="Бүтэн нэрээ оруулна уу"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="contactEmail" class="block text-gray-700 text-sm font-semibold mb-2">Цахим шуудан</label>
              <input
                type="email"
                id="contactEmail"
                name="contactEmail"
                placeholder="contact@example.com"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="password" class="block text-gray-700 text-sm font-semibold mb-2">Нууц үг</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Дор хаяж 8 тэмдэгт"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="confirmPassword" class="block text-gray-700 text-sm font-semibold mb-2">Нууц үгээ давтах</label>
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                placeholder="Нууц үгээ давтан оруулна уу"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="organizationType" class="block text-gray-700 text-sm font-semibold mb-2">Үйл ажиллагааны төрөл</label>
              <select
                id="organizationType"
                name="organizationType"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200 bg-white"
                required
              >
                <option value="">Сонгох</option>
                <option value="non-profit">Non-profit Organization</option>
                <option value="community-group">Community Group</option>
                <option value="educational">Educational Institution</option>
                <option value="social-enterprise">Social Enterprise</option>
                <option value="government">Government Agency</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label for="mission" class="block text-gray-700 text-sm font-semibold mb-2">Дэлгэрэнгүй мэдээлэл / Зорилго</label>
              <textarea
                id="mission"
                name="mission"
                rows="4"
                placeholder="Танай байгууллага, үйл ажиллагааны талаар дэлгэрэнгүй мэдээлэл оруулна уу"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200 resize-y"
                required
              ></textarea>
            </div>
            <div>
              <label class="block text-gray-700 text-sm font-semibold mb-2">Аль төрлийн сайн дурын ажилчин хайж байгаа вэ?</label>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="education" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Боловсрол</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="environment" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Хүрээлэн буй орчин</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="health" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Эрүүл мэнд / Асаргаа</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="social" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Олон нийтийн үйл ажиллагаа</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="community" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Амьтдад туслах</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="events" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Үйл ажиллагааны туслах</span>
                </label>
              </div>
            </div>

            <button
              type="submit"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md mt-6"
            >
              Бүртгүүлэх
            </button>
          </form>
          <p class="text-center text-gray-600 text-sm mt-6">
            Бүртгэлтэй юу? <a href="/login" class="text-green-600 hover:underline font-semibold">Нэвтрэх</a>
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
