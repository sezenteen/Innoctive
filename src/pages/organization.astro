---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Organization Sign Up - DoMore Mongolia">
  <main class="container mx-auto py-12 px-4">
    <section
      class="relative min-h-[40vh] flex flex-col items-center justify-center bg-gradient-to-br from-green-600 to-green-800 text-white rounded-3xl shadow-xl mt-4 mx-4 md:mx-auto p-8 text-center"
    >
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 leading-tight drop-shadow-md">
        Register Your Organization
      </h1>
      <p class="text-lg md:text-xl max-w-2xl opacity-90">
        Connect with passionate volunteers ready to support your cause. Please fill out the form below to get started.
      </p>
    </section>

    <section class="py-16 bg-gray-50 rounded-2xl shadow-inner mt-12 mx-4 md:mx-auto">
      <div class="container mx-auto px-4">
        <div class="max-w-3xl mx-auto bg-white rounded-xl shadow-lg p-8 md:p-12">
          <h2 class="text-3xl font-bold mb-8 text-gray-900 text-center">
            Your Organization Profile
          </h2>
          <form class="space-y-6">
            <div>
              <label for="organizationName" class="block text-gray-700 text-sm font-semibold mb-2">Organization Name</label>
              <input
                type="text"
                id="organizationName"
                name="organizationName"
                placeholder="Your Organization's Name"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="contactFullName" class="block text-gray-700 text-sm font-semibold mb-2">Contact Person Full Name</label>
              <input
                type="text"
                id="contactFullName"
                name="contactFullName"
                placeholder="Jane Doe"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="contactEmail" class="block text-gray-700 text-sm font-semibold mb-2">Contact Email Address</label>
              <input
                type="email"
                id="contactEmail"
                name="contactEmail"
                placeholder="contact@yourorg.com"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="password" class="block text-gray-700 text-sm font-semibold mb-2">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                placeholder="Minimum 8 characters"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="confirmPassword" class="block text-gray-700 text-sm font-semibold mb-2">Confirm Password</label>
              <input
                type="password"
                id="confirmPassword"
                name="confirmPassword"
                placeholder="Re-enter your password"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200"
                required
              />
            </div>
            <div>
              <label for="organizationType" class="block text-gray-700 text-sm font-semibold mb-2">Organization Type</label>
              <select
                id="organizationType"
                name="organizationType"
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200 bg-white"
                required
              >
                <option value="">Select Type</option>
                <option value="non-profit">Non-profit Organization</option>
                <option value="community-group">Community Group</option>
                <option value="educational">Educational Institution</option>
                <option value="social-enterprise">Social Enterprise</option>
                <option value="government">Government Agency</option>
                <option value="other">Other</option>
              </select>
            </div>
            <div>
              <label for="mission" class="block text-gray-700 text-sm font-semibold mb-2">Our Mission / Brief Description</label>
              <textarea
                id="mission"
                name="mission"
                rows="4"
                placeholder="Tell us about your organization's mission and what you do."
                class="w-full px-4 py-3 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-green-500 transition duration-200 resize-y"
                required
              ></textarea>
            </div>
            <div>
              <label class="block text-gray-700 text-sm font-semibold mb-2">Areas Where You Need Volunteers</label>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="education" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Education Support</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="environment" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Environmental Projects</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="health" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Health Initiatives</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="social" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Social Welfare Programs</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="community" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Community Outreach</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="events" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Event Support</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="admin" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Administrative Tasks</span>
                </label>
                <label class="flex items-center space-x-2">
                  <input type="checkbox" name="need" value="marketing" class="form-checkbox text-green-600 rounded" />
                  <span class="text-gray-700">Marketing & Communications</span>
                </label>
              </div>
            </div>

            <button
              type="submit"
              class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-3 px-8 rounded-full text-lg transition duration-300 ease-in-out transform hover:scale-105 shadow-md mt-6"
            >
              Create Organization Account
            </button>
          </form>
          <p class="text-center text-gray-600 text-sm mt-6">
            Already have an account? <a href="/login" class="text-green-600 hover:underline font-semibold">Log In</a>
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
