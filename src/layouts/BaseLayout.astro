---
// Import your global CSS (make sure it includes Tailwind's base styles)
import '../styles/global.css';

// Import your header and footer components
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Define props for the layout
interface Props {
  title?: string;
  description?: string;
  image?: string; // For Open Graph image
}

const {
  title = "DoMore Mongolia - Volunteer for a Better Future", // Default title
  description = "Join DoMore Mongolia to volunteer for impactful projects in education, environment, health, and social welfare across Ulaanbaatar and beyond. Make a difference today!", // Default description
  image = "/images/default-social-share.jpg" // Default social share image (create this image in your public/images folder)
} = Astro.props;

const currentUrl = new URL(Astro.url.pathname, Astro.site); // Get current page URL for social sharing
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={currentUrl.href} />

    <meta property="og:type" content="website" />
    <meta property="og:url" content={currentUrl.href} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site).href} />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={currentUrl.href} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site).href} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png">
    <link rel="manifest" href="/site.webmanifest">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

    </head>
<body class="font-sans antialiased  text-gray-900 min-h-screen flex flex-col">
    <Header />

    <main class="flex-grow">
        <slot />
    </main>

    <Footer />
</body>
</html>

<style is:global>

  body {
    font-family: 'Inter', sans-serif;
  }

  /* Optional: Smooth scrolling for anchor links */
  html {
    scroll-behavior: smooth;
  }
</style>